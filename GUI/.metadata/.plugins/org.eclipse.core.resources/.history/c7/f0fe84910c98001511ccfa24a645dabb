import java.awt.Component;
import java.awt.Container;
import java.awt.Dimension;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.BorderFactory;
import javax.swing.Box;
import javax.swing.BoxLayout;
import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JLayeredPane;
import javax.swing.JPanel;

public class  ButtonsMenu implements ActionListener{
	private JPanel container;
	private JButton bSettings,bStart;


	ButtonsMenu() {
		container = new JPanel();
		//container.setBorder(BorderFactory.createTitledBorder("Menu"));
		container.setBorder(BorderFactory.createEmptyBorder());
		BoxLayout layout = new BoxLayout(container, BoxLayout.Y_AXIS);
		container.setLayout(layout);
		container.setOpaque(true);

		bStart = new JButton("Start");
		bStart.setAlignmentX(Component.CENTER_ALIGNMENT);
		bStart.addActionListener(this);
		
		bSettings = new JButton("Settings");
		bSettings.setAlignmentX(Component.CENTER_ALIGNMENT);
		bSettings.addActionListener(this);
		
		container.add(Box.createVerticalStrut(200));
		container.add(bStart);
	    container.add(Box.createVerticalStrut(15));
	    container.add(bSettings);
	    
		
	}
	
	JPanel getMenu() {
		return container;
	}
    
	@Override
	public void actionPerformed(ActionEvent e) {
		Object source = e.getSource();
		if(source == bStart) {
			bStart.setText("START");
		}
		if(source == bSettings) {
			bSettings.setVisible(false);
		}
		
	}

	
}
