package cards;

public class PokerDeck {
	private PokerCards[] singleCard;
	

	PokerDeck() {
		singleCard = new PokerCards[52];
		int cardNumber = 0;
		
		for(int iColor = 0; iColor < 4; iColor++) {
			for(int iFigure = 0; iFigure < 12; iFigure++) {
				singleCard[cardNumber] = new PokerCards(iColor, iFigure);
			}
		}

	}
}
