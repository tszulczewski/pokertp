import java.awt.BorderLayout;
import java.awt.FlowLayout;

import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JLabel;

public class Window {
	protected static final ImageIcon IMG = new ImageIcon("images/bg1024.jpg");;
	protected JLabel background;

	static void windowDefault(GameMenu frame) {
	frame.setTitle("Poker Texas");
	frame.setSize(800, 600);
	frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	frame.setLayout(new BorderLayout());	
	frame.setResizable(false);
	
	/*img =  new ImageIcon("images/bg1024.jpg");
	background = new JLabel(img);
	add(background);
	background.setLayout(new FlowLayout());*/
	}
	
	static void windowBg(JLabel background) {
		background = new JLabel(IMG);
		background.setLayout(new FlowLayout());
	}
}
